	 $(document).ready( function() {
		 $("#hitCount").click( function() {
			var articleId = $("#articleId");
			articleId.attr("method", "POST");
			articleId.attr("action", "/count");
			articleId.submit();		 	
		 })
		 
		 $("#back").click( function() {
			 location.href = "/list";
		 })
	 })
	 
	 
 
</script>
