<?xml version="1.0" encoding="UTF-8"?>
<query> 
	<movie>
		<getAllMovie> 
			SELECT   M.*
         			 , G.GRADE_TITLE
         			 , AC.ACTOR_COUNT
			FROM     MOVIE M
         			 , GRADE G
        			 , (
				            SELECT  MOVIE_ID
				            	    , COUNT(ACTOR_LIST_ID) ACTOR_COUNT
				            FROM    ACTOR_LIST
				            GROUP   BY MOVIE_ID
         			    ) AC
			WHERE    M.GRADE_ID = G.GRADE_ID
			AND      AC.MOVIE_ID(+) = M.MOVIE_ID 
		</getAllMovie>
		
		<getOneMovieInfoByMovieId>
		/* 범위주석 */
			SELECT   M.*
         			 , G.GRADE_TITLE
			FROM     MOVIE M
         			 , GRADE G
			WHERE    M.GRADE_ID = G.GRADE_ID
			AND      M.MOVIE_ID = ?
		</getOneMovieInfoByMovieId>
		
		<getDirectorsByMovieId>
			SELECT   DIRECTOR_NAME
			FROM     DIRECTED_MOVIE DM
	         		 , DIRECTOR D
			WHERE    DM.DIRECTOR_ID = D.DIRECTOR_ID
			AND      DM.MOVIE_ID = ?
		</getDirectorsByMovieId>
		
		<getActorsByMovieId>
			SELECT   ACTOR_NAME
			FROM     ACTOR_LIST AC
			         , ACTOR A
			WHERE    AC.ACTOR_ID = A.ACTOR_ID
			AND      AC.MOVIE_ID = ?	
		
		</getActorsByMovieId>
		
		<getGenresByMovieId>
			SELECT   GENRE_TITLE
			FROM     GENRE_LIST GL
			         , GENRE G
			WHERE    GL.GENRE_ID = G.GENRE_ID
			AND      GL.MOVIE_ID = ?	
		</getGenresByMovieId>
		
	</movie>
</query>