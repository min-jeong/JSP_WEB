<?xml version="1.0" encoding="UTF-8"?>
<query> 
	<member>
		<getMemberByIdAndPassword>
			SELECT MEMBER_ID
				   , NICK_NAME
				   , PASSWORD
				   , EMAIL
			FROM   MEMBERS
			WHERE  MEMBER_ID = ?
			AND    PASSWORD = ?
		</getMemberByIdAndPassword>

	</member>
	
	<article>
		<getArticleInfo>
			SELECT *
			FROM   ARTICLE A, MEMBERS M
			WHERE  M.MEMBER_ID = A.MEMBER_ID
		</getArticleInfo>
		
		<getOneArticleInfoByArticleId>
			SELECT *
			FROM   ARTICLE A, MEMBERS M
			WHERE  M.MEMBER_ID = A.MEMBER_ID
			AND    A.ARTICLE_ID = ?
		</getOneArticleInfoByArticleId>
		
		<getUpdateHits>
			SELECT *
			FROM   ARTICLE A, MEMBERS M
			WHERE  M.MEMBER_ID = A.MEMBER_ID
			AND    A.ARTICLE_ID = ?
			AND    A.HITS = A.HITS + 1
		
		</getUpdateHits>
		<getCountHits>
			SELECT *
			FROM   ARTICLE A, MEMBERS M
			WHERE  M.MEMBER_ID = A.MEMBER_ID
		</getCountHits>
	</article>
</query>